<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Companion"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to our Pet Wellness System. Keep track of your pet's health and activities."
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="100dp">

        <!-- Logs Button -->
        <Button
            android:id="@+id/btnLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/blue"
            android:text="Logs"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnReminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminders"
            android:textColor="#ffffffff"
            android:background="@color/blue"
            android:layout_marginBottom="16dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/btnTrainingGuides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Guides"
            android:textColor="#ffffffff"
            android:background="@color/blue"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnPawCareDirectory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PawCare Directory"
            android:textColor="#ffffffff"
            android:background="@color/blue"/>

    </LinearLayout>

    <!-- FrameLayout for Additional Content (if needed) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainContentLayout"
        android:layout_above="@+id/footerLayout">

        <!-- Add additional views or fragments here as needed -->

    </FrameLayout>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#C11C1C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2024 Pet Companion. All rights reserved."
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="8dp"
            android:background="#000000"/>

    </LinearLayout>

</RelativeLayout>
